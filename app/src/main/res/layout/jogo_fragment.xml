<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gohorse.pokefight.fragments.JogoFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GYARADOS"
            android:id="@+id/txtViewNome"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgViewPokemon"
            android:minHeight="200dp"
            android:minWidth="300dp"
            android:layout_below="@+id/txtViewNome"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgViewTipo"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:layout_below="@+id/imgViewPokemon"
            android:layout_toLeftOf="@+id/txtViewNome"
            android:layout_toStartOf="@+id/txtViewNome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="laga laga"
            android:id="@+id/txtViewTipo"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/imgViewTipo"
            android:layout_alignLeft="@+id/txtViewNome"
            android:layout_alignStart="@+id/txtViewNome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hp:"
            android:id="@+id/lblHp"
            android:layout_below="@+id/imgViewTipo"
            android:layout_alignLeft="@+id/imgViewTipo"
            android:layout_alignStart="@+id/imgViewTipo"
            android:layout_marginTop="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:id="@+id/txtViewHp"
            android:layout_alignTop="@+id/lblHp"
            android:layout_alignLeft="@+id/txtViewTipo"
            android:layout_alignStart="@+id/txtViewTipo" />

    </RelativeLayout>

</FrameLayout>
