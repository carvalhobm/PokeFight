<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgPokemon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/agua" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomePokemon"
                    android:textSize="30sp"
                    android:text="Joaquim"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imgPokemon"
                    android:layout_toEndOf="@+id/imgPokemon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipoPokemon"
                    android:layout_toRightOf="@+id/imgPokemon"
                    android:layout_below="@+id/nomePokemon"

                    android:text="38" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.RecyclerView>




</LinearLayout>