<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@drawable/card"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="GYARADOS"
                android:id="@+id/txtViewNome"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/imgViewPokemon"
                android:minHeight="200dp"
                android:minWidth="300dp"
                android:layout_below="@+id/txtViewNome"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgViewTipo"
                android:minHeight="40dp"
                android:minWidth="50dp"
                android:layout_below="@+id/imgViewPokemon"
                android:layout_toLeftOf="@+id/txtViewNome"
                android:layout_toStartOf="@+id/txtViewNome" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="laga laga"
                android:id="@+id/txtViewTipo"
                android:textSize="30dp"
                android:layout_alignTop="@+id/imgViewTipo"
                android:layout_toRightOf="@+id/imgViewTipo"
                android:layout_toEndOf="@+id/imgViewTipo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hp:"
                android:id="@+id/lblHp"
                android:layout_below="@+id/imgViewTipo"
                android:layout_alignLeft="@+id/imgViewTipo"
                android:layout_alignStart="@+id/imgViewTipo"
                android:layout_marginTop="37dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:id="@+id/txtViewHp"
                android:layout_alignTop="@+id/lblHp"
                android:layout_alignLeft="@+id/txtViewTipo"
                android:layout_alignStart="@+id/txtViewTipo" />

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vitoria"
            android:id="@+id/btnVitoria"
            android:layout_below="@+id/rel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:minWidth="100dp"
            android:maxWidth="100dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Derrota"
            android:id="@+id/btnDerrota"
            android:layout_alignTop="@+id/btnVitoria"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:minWidth="100dp"
            android:maxWidth="100dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empate"
            android:id="@+id/btnEmpate"
            android:layout_below="@+id/rel"
            android:layout_centerHorizontal="true"
            android:minWidth="100dp"
            android:maxWidth="100dp" />
    </RelativeLayout>
</FrameLayout>
